<li 
    data-test-select-option
    class="text-gray-900 cursor-default select-none relative py-2 pl-3 pr-9 hover:bg-blue-300{{if this.selected "
    option-selected" }} option-select"
    id={{this.guid}}
    tabindex="0"
    role="option"
    {{on 'click' this.handleClick }}
>
    <div class="flex items-center">
        <span data-test-select-option-content class="font-normal ml-3 block truncate">
            {{#if @key}}
                {{get @option @key}}
            {{else}}
                {{@option}}
            {{/if}}
        </span>
    </div>
</li>