<div class="select" ...attributes>
    {{#if @label}}
        <label id="listbox-label" class="block text-sm font-medium text-gray-700 label-select" data-test-select-label>
            {{@label}}
        </label>
    {{/if}}
    <div class="mt-1 relative">
        <Ui::Select::-Button
            @registerButtonElement={{this.registerButtonElement}}
            @toggleOptions={{this.toggleOptions}}
            @selectedOption={{this.selectedOption}}
            @setSelectedOption={{this.setSelectionOption}}
            @key={{@key}}
            @disabled={{@disabled}}
        />
        {{#if this.isOpen}}
            <Ui::Select::-Options
                @options={{@options}}
                @key={{@key}}
                @clickOutside={{this.handleClickOutside}}
                @setSelectedOption={{this.setSelectedOption}}
                @selectedOption={{this.selectedOption}}
            />
        {{/if}}
    </div>
</div>