<div class='tpk-checkbox-container' ...attributes>
  {{#if (has-block-params)}}
    {{yield
      (hash
        Label=(component
          'ui/checkbox/label' guid=this.guid checked=@checked label=@label
        )
        Input=(component
          'ui/checkbox/input' guid=this.guid checked=@checked onChange=@onChange
        )
      )
    }}
  {{else}}
    <Ui::Checkbox::Input
      @guid={{this.guid}}
      @onChange={{@onChange}}
      @checked={{@checked}}
    />
    <Ui::Checkbox::Label @guid={{this.guid}} @label={{@label}} />
  {{/if}}
</div>