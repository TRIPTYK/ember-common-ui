<div
  class={{unless @classless 'tpk-checkbox'}}
  ...attributes
  data-test-tpk-checkbox
>
  {{#if (has-block-params)}}
    {{yield
      (hash
        Label=(component
          'tpk-checkbox/label'
          guid=this.guid
          checked=@checked
          label=@label
          classless=@classless
        )
        Input=(component
          'tpk-checkbox/input'
          guid=this.guid
          checked=@checked
          changeEvent=this.changeEvent
          onChange=this.onChange
          classless=@classless
        )
        onChange=this.onChange
        changeEvent=this.changeEvent
        guid=this.guid
      )
    }}
  {{else}}
    <TpkCheckbox::Input
      @guid={{this.guid}}
      @onChange={{this.onChange}}
      @changeEvent={{this.changeEvent}}
      @checked={{@checked}}
      @classless={{@classless}}
    />
    <TpkCheckbox::Label
      @classless={{@classless}}
      @guid={{this.guid}}
      @label={{@label}}
    >
      <:label>
        {{#if (has-block "label")}}
          {{yield @label to="label"}}
        {{else}}
          {{@label}}
        {{/if}}
      </:label>
    </TpkCheckbox::Label>
  {{/if}}
</div>
