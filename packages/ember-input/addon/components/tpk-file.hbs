<div class={{unless @classless 'tpk-file'}} ...attributes data-test-tpk-file>
  {{yield
    (hash
      Input=(component
        'tpk-file/input'
        onChange=this.onChange
        accept=@accept
        disabled=@disabled
        changeEvent=this.changeEvent
        guid=this.guid
        classless=@classless
      )
      Label=(component
        'tpk-file/label'
        onChange=this.onChange
        guid=this.guid
        classless=@classless
      )
      changeEvent=this.changeEvent
      onChange=this.onChange
      guid=this.guid
      files=this.files
    )
  }}
</div>