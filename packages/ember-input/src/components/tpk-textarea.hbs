<div
  class={{unless @classless 'tpk-textarea'}}
  ...attributes
  data-test-tpk-textarea
>
    {{yield
      (hash
        Label=(component
          'tpk-textarea/label' classless=@classless guid=this.guid label=@label
        )
        Input=(component
          'tpk-textarea/input'
          guid=this.guid
          value=@value
          changeEvent=this.changeEvent
          classless=@classless
          disabled=@disabled
          onChange=this.onChange
        )
        changeEvent=this.changeEvent
        guid=this.guid
        onChange=this.onChange
      )
    }}
</div>