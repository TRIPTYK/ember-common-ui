<div
  data-test-input={{@name}}
  class='{{this.containerStyle}}
    {{if @hasError 'error'}}
    {{if (and @infoTooltip (not @hasError)) 'tooltipInfo'}}'
>
  <label data-test-input-label for={{this.guid}} class={{this.labelStyle}}>
    {{@label}}{{#if @mandatory}}<span class='mandatory'>*</span>{{/if}}
  </label>
  <div class='relative'>
    <input
      data-test-input-content
      class='{{this.inputStyle}} {{if @password 'password'}}'
      name={{@name}}
      id={{this.guid}}
      value={{@value}}
      disabled={{@disabled}}
      placeholder={{@placeholder}}
      maxlength={{@limit}}
      ...attributes
      {{on 'input' this.hasChange}}
    />
    {{#if @password}}
      <button
        data-test-input-password-button
        type='button'
        class={{this.passwordStyle}}
        {{on 'click' this.togglePassword}}
      >
        {{#if this.showPassword}}
          <img
            src='/assets/icons/eye-shut.svg'
            alt='mot de passe masqué'
            class='w-5 h-5'
          />
        {{else}}
          <img
            src='/assets/icons/eye.svg'
            alt='mot de passe affiché'
            class='w-5 h-5'
          />
        {{/if}}
      </button>
    {{/if}}
  </div>
  {{#if @limit}}
    <div
      data-test-input-limit
      class={{this.limitStyle}}
    >
      Caractères :
      {{this.actualSize}}/{{@limit}}
    </div>
  {{/if}}
  <span data-test-input-tooltip class={{this.tooltipStyle}}>
    {{yield}}
    {{#if (and @infoTooltip (not @hasError))}}
      {{@infoTooltip}}
    {{/if}}
  </span>
</div>