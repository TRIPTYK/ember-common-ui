<div class={{unless @classless 'tpk-input'}} ...attributes data-test-tpk-input>
  {{#if (has-block)}}
    {{yield
      (hash
        Input=(component
          'tpk-input/input'
          onChange=this.onChange
          type=@type
          value=@value
          guid=this.guid
          classless=@classless
        )
        Label=(component
          'tpk-input/label'
          onChange=this.onChange
          guid=this.guid
          classless=@classless
        )
        guid=this.guid
        onChange=this.onChange
      )
    }}
  {{else}}
    {{! Quick version }}
    <TpkInput::Label @guid={{this.guid}} @classless={{@classless}}>
      {{@label}}
    </TpkInput::Label>
    <TpkInput::Input
      @value={{@value}}
      @type={{@type}}
      @onChange={{this.onChange}}
      @guid={{this.guid}}
      @classless={{@classless}}
    />
  {{/if}}
</div>