<TpkInput
  @value={{@value}}
  @type={{@type}}
  @onChange={{@onChange}}
  @onInput={{@onInput}}
  @classless={{@classless}}
  class='tpk-input-error-container'
  ...attributes
  as |I|
>
  <I.Label class='tpk-input-error-label'>
    {{@label}}
  </I.Label>
  <div class='tpk-input-error-input-container'>
    <I.Input
      aria-invalid={{@hasError}}
      class='tpk-input-error-input {{if @hasError "error"}}'
    />
    <div class='tpk-input-error-icon-container'>
      {{#if @hasError}}
        {{#if (has-block 'icon')}}
          {{yield to='icon'}}
        {{else}}
          <svg
            class='h-5 w-5 text-red-500'
            xmlns='http://www.w3.org/2000/svg'
            viewBox='0 0 20 20'
            fill='currentColor'
            aria-hidden='true'
          >
            <path
              fill-rule='evenodd'
              d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z'
              clip-rule='evenodd'
            ></path>
          </svg>
        {{/if}}
      {{/if}}
    </div>
  </div>
  {{#if @hasError}}
    {{yield to='error'}}
  {{/if}}
</TpkInput>