<div class={{unless @classless 'tpk-input-icon'}} ...attributes>
  {{#if (has-block-params)}}
    {{yield
      (hash
        Input=(component
          'tpk-input/input'
          onChange=@onChange
          onInput=@onInput
          type=@type
          value=@value
          guid=this.guid
          classless=@classless
        )
        Label=(component
          'tpk-input/label'
          onChange=@onChange
          guid=this.guid
          onInput=@onInput
          classless=@classless
        )
        Icon=(component 'tpk-input-icon/icon')
        guid=this.guid
      )
    }}
  {{else}}
    {{! Quick version }}
    <TpkInput::Label @guid={{@guid}} @classless={{@classless}}>
      {{@label}}
    </TpkInput::Label>
    <div class='tpk-input-icon-container'>
      <TpkInputIcon::Icon @onClick={{@onIconClick}} @classless={{@classless}}>
        {{yield}}
      </TpkInputIcon::Icon>
      <TpkInput::Input
        @type={{@type}}
        @value={{@value}}
        @onChange={{@onChange}}
        @onInput={{@onInput}}
        @guid={{@guid}}
        @classless={{@classless}}
      />
    </div>
  {{/if}}
</div>