<div class='tpk-textarea' ...attributes>
  {{#if (has-block)}}
    {{yield
      (hash
        Label=(component
          'tpk-textarea/label' guid=this.guid mandatory=@mandatory label=@label
        )
        Input=(component
          'tpk-textarea/input'
          guid=this.guid
          value=@value
          onChange=this.onChange
        )
        count=this.count
        guid=this.guid
        onChange=this.onChange
      )
    }}
  {{else}}
    <TpkTextarea::Label
      @mandatory={{@mandatory}}
      @guid={{this.guid}}
      @label={{@label}}
    />
    {{! template-lint-disable no-duplicate-id }}
    <TpkTextarea::Input
      @onChange={{this.onChange}}
      @guid={{this.guid}}
      @updateValue={{this.updateValue}}
      @limit={{@limit}}
      @value={{@value}}
    />
  {{/if}}
</div>