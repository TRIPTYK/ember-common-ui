<div class='tpk-textarea' ...attributes>
  {{#if (has-block)}}
    {{yield
      (hash
        Label=(component
          'tpk-textarea/label' guid=this.guid mandatory=@mandatory label=@label
        )
        Area=(component
          'tpk-textarea/area'
          guid=this.guid
          value=@value
          limit=@limit
          updateValue=this.updateValue
        )
        Counter=(component 'tpk-textarea/counter' count=this.count limit=@limit)
        Tooltip=(component 'tpk-textarea/tooltip' tooltip=@tooltip)
        guid=this.guid
        count=this.count
        updateValue=this.updateValue
      )
    }}
  {{else}}
    <TpkTextarea::Label
      @mandatory={{@mandatory}}
      @guid={{this.guid}}
      @label={{@label}}
    />
    {{! template-lint-disable no-duplicate-id }}
    <TpkTextarea::Area
      @guid={{this.guid}}
      @updateValue={{this.updateValue}}
      @limit={{@limit}}
      @value={{@value}}
    />
    {{#if @limit}}
      <TpkTextarea::Counter @count={{this.count}} @limit={{@limit}} />
    {{/if}}
    <TpkTextarea::Tooltip @tooltip={{@tooltip}} />
  {{/if}}
</div>