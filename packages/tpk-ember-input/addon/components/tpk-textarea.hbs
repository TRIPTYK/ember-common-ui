<div
  class={{unless @classless 'tpk-textarea'}}
  ...attributes
  data-test-tpk-textarea
>
  {{#if (has-block)}}
    {{yield
      (hash
        Label=(component
          'tpk-textarea/label'
          classless=@classless
          guid=this.guid
          mandatory=@mandatory
          label=@label
        )
        Input=(component
          'tpk-textarea/input'
          guid=this.guid
          value=@value
          classless=@classless
          onChange=this.onChange
        )
        guid=this.guid
        onChange=this.onChange
      )
    }}
  {{else}}
    <TpkTextarea::Label @classless={{@classless}} @guid={{this.guid}}>
      {{@label}}
    </TpkTextarea::Label>
    <TpkTextarea::Input
      @classless={{@classless}}
      @onChange={{this.onChange}}
      @guid={{this.guid}}
      @value={{@value}}
    />
  {{/if}}
</div>