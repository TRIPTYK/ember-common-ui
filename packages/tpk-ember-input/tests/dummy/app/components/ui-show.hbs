<h2 class='text-3xl mb-4 text-center font-semibold'>Set of demo of inputs</h2>
<div class='shadow-sm bg-gray-100 rounded-lg p-8 mb-4'>
  <h3 class='text-xl ml-2'>Simple input</h3>
  <TpkInput @onChange={{this.onChange}} @value={{this.input}} as |I|>
    <I.Label>
      <span class='text-red-500'>Mon texte</span>
      en
      <span>HTML</span>
    </I.Label>
    <I.Input />
  </TpkInput>
  <TpkInput
    @onChange={{this.onChange}}
    @value={{this.input}}
    @type='password'
    @label='Champ texte'
  />
  <TpkInputIcon
    @onChange={{this.onChange}}
    @value={{this.input}}
    @onIconClick={{this.iconClick}}
    @label='Email'
  >
    <svg
      class='h-5 w-5 text-gray-400'
      xmlns='http://www.w3.org/2000/svg'
      viewBox='0 0 20 20'
      fill='currentColor'
      aria-hidden='true'
    >
      <path
        d='M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z'
      ></path>
      <path d='M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z'></path>
    </svg>
  </TpkInputIcon>
</div>
<h2 class='text-3xl mb-4 text-center font-semibold'>Set of demo of checkboxes</h2>
<div class='shadow-sm bg-gray-100 rounded-lg p-8 mb-4'>
  <h3 class='text-xl ml-2'>Checkboxes</h3>
  <div class='flex justify-around'>
    <TpkCheckbox
      @label='Label'
      @checked={{this.checked}}
      @onChange={{this.setChecked}}
    />

    <TpkCheckbox
      @label='Label'
      @checked={{this.checked}}
      @onChange={{this.setChecked}}
      as |C|
    >
      <C.Input class='text-yellow-300' />
      <C.Label class='text-blue-300' />
    </TpkCheckbox>
  </div>
</div>
<h2 class='text-3xl mb-4 text-center font-semibold'>Set of demo of file inputs</h2>
<div class='shadow-sm bg-gray-100 rounded-lg p-8 mb-4'>
  <h3 class='text-xl ml-2'>File inputs</h3>
  <div class='flex justify-around'>
    <TpkFile />
  </div>
</div>

