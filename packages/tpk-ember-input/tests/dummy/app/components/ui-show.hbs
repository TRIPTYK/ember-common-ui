<h2 class="text-3xl mb-4 text-center font-semibold">Set of demo of input</h2>
<div class="shadow-sm bg-gray-100 rounded-lg p-8 mb-4">
  <h3 class="text-xl ml-2">Simple input with mandatory</h3>
  <Ui::Input
    @label="Add your favorite JS framework"
    @name="favoriteJSFramework"
    @updateValue={{this.setValueSimple}}
    @value={{this.valueSimple}}
    @mandatory={{true}}
    @placeholder="EmberJS"
    @containerStyle="w-96"
    @labelStyle="labelClass"
    @inputStyle="inputClass"
  />

  <div class="mx-8 mt-2 text-xl font-bold ">
    {{this.valueSimple}}
    
  </div>
</div>
<div class="shadow-sm bg-gray-100 rounded-lg p-8 mb-4">
  <h3 class="text-xl ml-2">Password input</h3>
  <Ui::Input
    @label="Add your secret password"
    @name="password"
    @updateValue={{this.setValuePassword}}
    @value={{this.valuePassword}}
    @password={{true}}
    @containerStyle="w-96"
    @labelStyle="labelClass"
    @inputStyle="inputClass"
    @passwordStyle=""
    type="password"
  />
  <div class="mx-8 mb-8 mt-2 text-xl font-bold">
    {{this.valuePassword}}
  </div>
</div>
<div class="shadow-sm bg-gray-100 rounded-lg p-8 mb-4">
  <h3 class="text-xl ml-2">Limit input</h3>
  <Ui::Input
    @label="Tell me something"
    @name="limit"
    @updateValue={{this.setValueLimit}}
    @value={{this.valueLimit}}
    @limit={{10}}
    @containerStyle="w-96"
    @labelStyle="labelClass"
    @inputStyle="inputClass"
    @limitStyle="text-yellow-500 text-sm mt-1"
  />
  <div class="mx-8 mb-8 mt-2 text-xl font-bold">
    {{this.valueLimit}}
  </div>
</div>
<div class="shadow-sm bg-gray-100 rounded-lg p-8 mb-4">
  <h3 class="text-xl ml-2">Error input</h3>
  <Ui::Input
    @name="error"
    @updateValue={{this.setValueError}}
    @value={{this.valueError}}
    @containerStyle="w-96"
    @labelStyle="labelClass"
    @inputStyle="inputClass"
    @tooltipStyle="text-red-500 text-sm"
    @hasError={{true}}
  >
    Because we have an error, we add a yield that contains an error
  </Ui::Input>
  <div class="mx-8 mb-8 mt-2 text-xl font-bold">
    {{this.valueError}}
  </div>
</div>
<div class="shadow-sm bg-gray-100 rounded-lg p-8 mb-4">
  <h3 class="text-xl ml-2">Tooltip input</h3>
  <Ui::Input
    @label="Information"
    @name="info"
    @updateValue={{this.setValueInfo}}
    @value={{this.valueInfo}}
    @containerStyle="w-96"
    @labelStyle="labelClass"
    @inputStyle="inputClass"
    @infoTooltip="My custom message"
    @tooltipStyle="text-green-500 text-sm mt-1"
  />
  <div class="mx-8 mb-8 mt-2 text-xl font-bold">
    {{this.valueInfo}}
  </div>
</div>
