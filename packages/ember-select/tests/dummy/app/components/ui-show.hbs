<h2 class='text-3xl'>Demo of select</h2>
<div>
  <TpkSelect
    @label='Choose your captain'
    @options={{this.options}}
    @onChange={{this.setValue}}
    @selected={{this.value}}
    class='w-1/3'
  as |S|>
    <S.Label />
    <S.Button>
      {{if S.hasSelection S.selected "Please select something"}}
    </S.Button>
    <S.Options as |Opts|>
        <Opts as |opt|>
          {{opt.option}}
        </Opts>
    </S.Options>
  </TpkSelect>
</div>

<div>
  <TpkSelect
    @label='Choose your captains'
    @options={{this.options}}
    @onChange={{this.setValueMultiple}}
    @selected={{this.selections}}
    @multiple={{true}}
    class='w-1/3'
  as |S|>
    <S.Label />
    <S.Button >
      {{if S.hasSelection S.selected "Please select something"}}
      <span>{{if S.isOpen "^" "v"}}</span>
    </S.Button>
    <S.Options as |Opts|>
        <Opts as |opt|>
          <div>
            {{opt.option}}  
          </div>
          {{#if opt.isSelected}}
            <div>
              V
            </div>
         {{/if}}
        </Opts>
    </S.Options>
  </TpkSelect>
</div>