<h2 class='text-3xl'>Demo of select</h2>
<div>
  <TpkSelect
    @label='Choose your captain'
    @options={{this.options}}
    @onChange={{this.setValue}}
    @selected={{this.value}}
    class='w-1/3'
  as |S|>
    <S.Label />
    <S.Button>
      {{S.selected}}
    </S.Button>
    <S.Options as |Opts|>
      <Opts as |opt|>
        {{opt.option}}
      </Opts>
    </S.Options>
  </TpkSelect>
</div>