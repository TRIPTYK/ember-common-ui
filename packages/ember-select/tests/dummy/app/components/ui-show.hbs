<h2 class='text-3xl'>Demo of select</h2>
<div>
  <TpkSelect
    @label='Choose your captain'
    @options={{this.options}}
    @onChange={{this.setValue}}
    @selected={{this.value}}
    class='w-1/3'
  as |S|>
    <S.Label />
    <S.Button>
      {{if S.hasSelection S.selected "Please select something"}}
    </S.Button>
    <S.Options as |Opts|>
        <Opts as |opt|>
          {{opt.option}}
        </Opts>
    </S.Options>
  </TpkSelect>
</div>
<div>
  <TpkSelect
    @label='Choose your captains'
    @options={{this.options}}
    @onChange={{this.setValueMultiple}}
    @selected={{this.selections}}
    @multiple={{true}}
    class='w-1/3'
  as |S|>
    <S.Label />
    <S.Button >
      {{if S.hasSelection S.selected "Please select something"}}
      <span>{{if S.isOpen "~" "v"}}</span>
    </S.Button>
    <S.Options as |Opts|>
        <Opts as |opt|>
          <div>
            {{opt.option}}  
          </div>
          {{#if opt.isSelected}}
            <div>
              V
            </div>
         {{/if}}
        </Opts>
    </S.Options>
  </TpkSelect>
</div>


<div>
    <TpkSelectSearch
      @label='Select something'
      @options={{this.options}}
      @onChange={{this.setCountry}}
      @selected={{this.country}}
      @onInput={{perform this.onInput}}
      class="tpk-select-search"
    as |S|>
      <S.Label />
      <div class="tpk-select-search-container">
        <S.Input  @selectedText={{if S.hasSelection S.selected.name "Please select something"}} />
        <S.Button>
        <svg width="18" height="16" aria-hidden="true" focusable="false">
          <polygon class="arrow" stroke-width="0" fill-opacity="0.75" fill="currentcolor" points="3,6 15,6 9,14"></polygon>
        </svg>
        </S.Button>
      </div>
      {{#if this.onInput.isIdle}}
      <S.Options as |Opts|>
        <Opts as |opt|>
            <div>
            {{opt.option.name}}  
          </div>
            {{#if opt.isSelected}}
              <div>
                V
              </div>
          {{/if}}
        </Opts>
      </S.Options>
      {{else}}
        <p>Loading ...</p>
      {{/if}}
    </TpkSelectSearch>
</div>