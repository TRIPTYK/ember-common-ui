<ul
  tabindex='-1'
  role='listbox'
  aria-labelledby={{@guid}}
  aria-activedescendant='{{@guid}}-listbox-option-{{@selectedIndex}}'
  class={{unless @classless 'tpk-select-options'}}
  ...attributes
>
  {{#each @options as |o i|}}
    {{yield
      (component
        'tpk-select/options/option'
        option=o
        guid=@guid
        index=i
        selected=@selected
        multiple=@multiple
        onChange=@onChange
      )
    }}
  {{/each}}
</ul>