{{! template-lint-disable no-down-event-binding }}
<ul
  tabindex='-1'
  role='listbox'
  aria-labelledby={{@guid}}
  class={{unless @classless 'tpk-select-options'}}
  ...attributes
>
  {{#each @options as |o i|}}
    {{yield
      (component
        'tpk-select/options/option'
        option=o
        guid=@guid
        registerChild=this.registerChild
        index=i
        selected=@selected
        multiple=@multiple
        onChange=@onChange
      )
    }}
  {{/each}}
</ul>