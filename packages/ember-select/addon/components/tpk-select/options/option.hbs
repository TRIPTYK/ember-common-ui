<div
  {{on 'click' (fn @onChange @option this.isSelected)}}
  id='{{@guid}}-listbox-option-{{@index}}'
  aria-selected={{this.isSelected}}
  role='option'
  tabindex='-1'
  class={{unless @classless 'tpk-select-container-options-option'}}
  data-test-option={{@index}}
  {{did-insert @registerChild}}
  ...attributes
>
  {{yield (hash option=@option isSelected=this.isSelected)}}
</div>