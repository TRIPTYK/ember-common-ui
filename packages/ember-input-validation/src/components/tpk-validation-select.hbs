<TpkSelect
  @label={{@label}}
  @options={{@options}}
  @multiple={{@multiple}}
  @selected={{@selected}}
  @onChange={{this.onChange}}
  @classless={{@classless}}
  @defaultText={{@defaultText}}
  ...attributes
  data-has-error='{{this.hasError}}'
  as |I|
>
  {{yield
    (hash
      Label=I.Label
      Options=I.Options
      Button=I.Button
      selected=@selected
      hasSelection=I.hasSelection
      errors=this.errors
      hasError=this.hasError
      firstError=this.firstError
    )
  }}
</TpkSelect>