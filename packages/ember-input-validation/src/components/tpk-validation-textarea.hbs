<TpkTextarea
  @value={{this.value}}
  @label={{@label}}
  @classless={{@classless}}
  @changeEvent={{@changeEvent}}
  @onChange={{this.onChange}}
  ...attributes
  data-has-error='{{this.hasError}}'
  as |I|
>
  {{yield
    (hash
      Input=I.Input
      Label=I.Label
      errors=this.errors
      hasError=this.hasError
      firstError=this.firstError
    )
  }}
</TpkTextarea>