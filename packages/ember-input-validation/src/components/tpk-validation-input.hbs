<TpkInput
  @value={{this.value}}
  @label={{@label}}
  @type={{@type}}
  @onChange={{this.onChange}}
  @classless={{@classless}}
  @changeEvent={{@changeEvent}}
  @mask={{@mask}}
  @maskOptions={{@maskOptions}}
  @unmaskValue={{@unmaskValue}}
  ...attributes
  data-has-error='{{this.hasError}}'
  as |I|
>
  {{yield
    (hash
      Input=I.Input
      Label=I.Label
      errors=this.errors
      hasError=this.hasError
      firstError=this.firstError
    )
  }}
</TpkInput>