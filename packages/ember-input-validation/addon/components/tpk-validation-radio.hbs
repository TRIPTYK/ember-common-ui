<TpkRadio
  @selected={{changeset-get @changeset @validationField}}
  @value={{@value}}
  @name={{if @name @name @validationField}}
  @label={{@label}}
  @type={{@type}}
  @classless={{@classless}}
  @disabled={{@disabled}}
  @onChange={{this.onChange}}
  ...attributes
  as |I|
>
  {{#if (has-block-params)}}
    {{yield
      (hash
        Input=I.Input
        Label=I.Label
        errors=this.errors
        hasError=this.hasError
        firstError=this.firstError
      )
    }}
  {{else}}
    <I.Input aria-invalid={{this.hasError}} />
    <I.Label>
      {{@label}}
    </I.Label>
    {{yield}}
  {{/if}}
</TpkRadio>