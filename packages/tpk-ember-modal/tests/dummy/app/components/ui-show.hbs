<h2 class='text-3xl mb-4 text-center font-semibold'>Set of demo of textarea</h2>

{{this.open1}}
{{this.open2}}
{{this.open3}}

<Ui::Modal
  @title='title'
  class='bg-yellow-900'
  @isOpen={{this.open1}}
  @onClose={{this.closed1}}
  as |M|
>
  <M.Head class='bg-yellow-700' as |H|>
    <H.Button>
      X
    </H.Button>
  </M.Head>
  <p class='bg-yellow-500'>
    Content
  </p>
</Ui::Modal>
<button type='button' {{on 'click' this.toggle1}}>Toggle modal 1</button>

<Ui::Modal
  @title='title'
  class='bg-red-900'
  @isOpen={{this.open2}}
  @onClose={{this.closed2}}
  as |M|
>
  <M.Head class='bg-red-700' />
  <p class='bg-red-500'>
    Content
  </p>
</Ui::Modal>
<button type='button' {{on 'click' this.toggle2}}>Toggle modal 2</button>

<Ui::Modal
  @title='title'
  class='bg-green-400'
  @isOpen={{this.open3}}
  @onClose={{this.closed3}}
>
  <p class='bg-green-500'>
    Content
  </p>
</Ui::Modal>

<button type='button' {{on 'click' this.toggle3}}>Toggle modal 3</button>