      >
        <span
          class='text-xs
            {{if step.isActive "text-indigo-600"}}
            font-semibold tracking-wide uppercase group-hover:text-indigo-800'
        >Step {{step.index}}</span>
      </button>
    </step.Header>
    <div class='{{if step.isActive "block" "hidden"}}'>
      <div class='bg-white px-4 py-5 border-b border-gray-200 sm:px-6'>
        <h3 class='text-lg leading-6 font-medium text-gray-900'>Job Postings</h3>
      </div>
    </div>
  </o.Step>
