<TpkStepper @startStep={{1}} as |o|>
  <o.Stepper class='space-y-4 md:flex md:space-y-0 md:space-x-8 mb-10' />
  <o.Step as |step|>
    <step.Header class='md:flex-1'>
      1
    </step.Header>
    2
  </o.Step>
  <o.Step as |step|>
    <step.Header class='md:flex-1'>
      1
    </step.Header>
      2
  </o.Step>
  <div class='mt-10'>
    <button disabled={{o.isFirst}} type='button' {{on 'click' o.goToPrevious}}>
      Previous
    </button>
    <button disabled={{o.isLast}} type='button' {{on 'click' o.goToNext}}>
      Next
    </button>
  </div>
</TpkStepper>