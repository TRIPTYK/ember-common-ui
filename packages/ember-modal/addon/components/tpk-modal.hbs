{{#if @isOpen}}
  {{#in-element this.modalContainer}}
    <div
      class='tpk-modal-container'
      role='dialog'
      aria-labelledby={{@title}}
      {{on-escape this.onEscape}}
      ...attributes
    >
      {{! Waiting for the backdrop filter css attribute }}
      {{#if (has-block-params)}}
        {{yield
          (hash
            Content=(component
              'tpk-modal/content'
              title=@title
              isOpen=@isOpen
              onClose=@onClose
              Cover=(component 'tpk-modal/cover')
            )
          )
        }}
      {{else}}
        <TpkModal::Cover />
        <TpkModal::Content
          @title={{@title}}
          @isOpen={{@isOpen}}
          @onClose={{@onClose}}
        >
          {{yield}}
        </TpkModal::Content>
      {{/if}}
    </div>
  {{/in-element}}
{{/if}}