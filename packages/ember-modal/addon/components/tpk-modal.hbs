{{#if @isOpen}}
  {{#in-element this.modalContainer insertBefore=null}}
    <div
      {{this.handleEscapeKey @isOpen this.close}}
      {{did-insert this.updateStack}}
      {{will-destroy this.willDestroyNode}}
      class={{unless @classless "tpk-modal"}}
      ...attributes
    >
      {{! Waiting for the backdrop filter css attribute }}
      {{#if (has-block-params)}}
        {{yield
          (hash
            Content=(component
              'tpk-modal/content'
              title=@title
              isOpen=@isOpen
              isOnTop=this.isOnTop
              onClose=this.close
            )
          )
        }}
      {{else}}
        <TpkModal::Content
          @title={{@title}}
          @isOpen={{@isOpen}}
          @onClose={{this.close}}
        >
          {{yield}}
        </TpkModal::Content>
      {{/if}}
    </div>
  {{/in-element}}
{{/if}}