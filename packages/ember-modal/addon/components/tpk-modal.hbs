{{#if @isOpen}}
  {{#in-element this.modalContainer}}
    <div
      class='tpk-modal-container'
      role='dialog'
      aria-labelledby={{@title}}
      {{on-escape @onClose}}
      {{focus-trap}}
      ...attributes
    >
      {{! Waiting for the backdrop filter css attribute }}
      <div class={{concat 'tpk-modal-cover ' @coverClass}}></div>
      {{#if (has-block-params)}}
       {{yield
          (hash
            Content=(component
              'tpk-modal/content' title=@title isOpen=@isOpen onClose=@onClose
            )
          )
        }}
      {{else}}
        <TpkModal::Content
          @title={{@title}}
          @isOpen={{@isOpen}}
          @onClose={{@onClose}}
        >
          {{yield}}
        </TpkModal::Content>
      {{/if}}
    </div>
  {{/in-element}}
{{/if}}