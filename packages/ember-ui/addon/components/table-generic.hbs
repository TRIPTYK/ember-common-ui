{{#if @onSearch}}
  <Inputs::Search
    @onSearch={{this.onSearch}}
    @label={{t "global.search"}}
    @placeholder={{t "global.search"}}
  />
{{/if}}
<YetiTable
  class="tableYeti w-full relative"
  @loadData={{this.loadData}}
  @totalRows={{this.totalRows}}
  @filter={{this.filterText}}
  @pagination={{true}}
  @registerApi={{this.registerApi}}
  @pageSize={{this.pageSize}}
  data-test-table
  ...attributes
  as |table|
>
  <TableGeneric::Header @table={{table}} @header={{@header}} />
  <TableGeneric::Body
    @header={{@header}}
    @table={{table}}
    @rowClick={{@rowClick}}
    @rowActions={{@rowActions}}
  />
  <TableGeneric::Footer @table={{table}} />
  {{#if table.isLoading}}
    <LoadingIndicator />
  {{/if}}
</YetiTable>