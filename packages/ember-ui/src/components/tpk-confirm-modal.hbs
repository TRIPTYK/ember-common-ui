<TpkModal
  data-test-confirm-modal
  @title={{@title}}
  @isOpen={{@isOpen}}
  @outsideClickHandler={{@outsideClickHandler}}
  @onClose={{@onClose}}
  @classless={{@classless}}
  ...attributes
  as |Modal|
>
  <Modal.Content>
    {{yield
      (hash
        title=@title
        Confirm=(component 'tpk-confirm-modal/confirm' onConfirm=@onConfirm)
        Cancel=(component 'tpk-confirm-modal/cancel' onClose=@onClose)
      )
    }}
  </Modal.Content>
</TpkModal>