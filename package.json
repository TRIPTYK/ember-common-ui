{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @triptyk/ember-input run build && pnpm --filter @triptyk/ember-input-validation run build && pnpm --filter @triptyk/ember-ui run build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "lint:fix": "pnpm recursive run lint:fix",
    "lint": "pnpm recursive run lint",
    "start:ui": "pnpm --filter @triptyk/ember-ui start",
    "start:input-validations": "pnpm --filter @triptyk/ember-input-validation start",
    "start:input": "pnpm --filter @triptyk/ember-input start",
    "start:test-app": "pnpm --filter doc-app start"
  },
  "pnpm": {
    "overrides": {
      "ember-concurrency": "4.0.2"
    }
  },
  "repository": {
    "url": "git@github.com:TRIPTYK/ember-common-ui.git"
  },
  "devDependencies": {
    "concurrently": "catalog:",
    "git-conventional-commits": "catalog:",
    "lefthook": "catalog:",
    "lerna": "catalog:"
  },
  "packageManager": "pnpm@9.12.3",
  "volta": {
    "node": "20.18.0",
    "pnpm": "9.12.3"
  }
}